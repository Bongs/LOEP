<% showTools ||= false %>

<% aL = @apps.length %>
<% if aL === 0 %>
  <%= render '/layouts/emptytable', :resources => "applications" %>
<% else %>
  <table id="app_table" cellspacing='0' class="loep_table">
    <thead>
      <tr>
        <th><%=t("words.name")%></th>
        <th><%=t("words.owner")%></th>
        <th><%=t("words.creation_date")%></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td class="tdcenter">
          <a href="<%=app_path(app)%>"><%= app.name %></a>
        </td>
        <td class="tdcenter">
          <a target="_blank" href="<%=user_path(app.user)%>"><%= app.user.name %></a>
        </td>
        <td class="tdcenter">
          <%= Utils.getReadableDate(app.created_at) %>
        </td>
        <td class="tdcenter tdedit">
            <%if can?(:update,app) %>
              <a href="<%=edit_app_path(app)%>"><span class="glyphicon glyphicon-edit"></span> <%=t("words.edit")%></a>
            <% end %>
        </td>
        <td class="tdcenter tddestroy">
          <%if can?(:destroy,app) %>
            <a href="<%=app_path(app)%>" data-confirm="Are you sure?" data-method="delete" rel="nofollow"><span class="glyphicon glyphicon-trash"></span> <%=t("words.remove")%></a>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>


<% if showTools %>

<script type="text/javascript">

  $(document).ready(function(){

    //////////////////
    // Table Sorter
    //////////////////

    var iDisplayLength = LOEP.Storage.get("AppsTable_iDisplayLength") || -1;

    //DOC: http://datatables.net
    var appsTable = $("#app_table").dataTable({
      "bJQueryUI": true,
      "sPaginationType": "full_numbers",
      "aaSorting": [[ 0, "asc" ]],
      "aoColumnDefs": [
          { 'bSortable': false, 'aTargets': [ 3,4 ] },
          { "bSearchable": false, "aTargets": [ 3,4 ] },
          { "sType":"loep-date-dd/mm/yyyy", "aTargets": [2] }
      ],
      "sDom": '<"H"lfr><"F"ip>t',
      "iDisplayLength": iDisplayLength,
      "oLanguage": { <%= render "application/oLanguage"%> }
    });

    //DataTable events: http://datatables.net/docs/DataTables/1.9.4/#page
    $('#app_table_length').on('change', function(e){
      var iDisplayLength = parseInt($(this).find("select").val());
      LOEP.Storage.add("AppsTable_iDisplayLength",iDisplayLength);
    });

  });

</script>

<% end %>