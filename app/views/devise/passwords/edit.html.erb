<div class="loep_form_wrapper">
  <h2><%=t("login.password_change")%></h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>

    <% devise_error_messages!.each do |msg| %>
      <% if msg.is_a?(String) %>
        <div class="alert alert-danger"><%= msg %></div>
      <% end %>
    <% end %>

    <%= f.hidden_field :reset_password_token %>

    <p class="form_legend"><%=t("login.password_new")%></p>
    <%= f.password_field :password, :autofocus => true, :class=>'loep_input' %>

    <p class="form_legend"><%=t("login.password_new_confirmation")%></p>
    <%= f.password_field :password_confirmation, :class=>'loep_input' %>

    <p class="form_before_button">&nbsp;</p>
    <%= f.submit t("devise.reset_password.change_my_password"), :class => 'loep_button update_button' %>
  <% end %>

  </br>
  <%= link_to t("dictionary.back"), :back, :class=>'backLink' %>

</div>
