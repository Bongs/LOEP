<% items ||= ["all"] %>

<div class="survey_block survey_block_context">
  <p class="survey_supersection_title"><%=t("context.lo.title")%></p>
  
  <%if items.include?("loc_context") or items.include?("all") %>
    <p class="survey_question_title"><%=t("context.lo.context")%></p>
    <p class="survey_block_top_space"></p>
    <%Utils.getOptionsForSelectLOContextContext.map{|u| u[0]}.each do |option|%>
      <p class="input_wrapper">
        <input type="checkbox"/><span> <%=option%></span>
      </p>
    <%end%>
  <%end%>

   <%if items.include?("loc_grade") or items.include?("all") %>
    <p class="survey_question_title"><%=t("context.lo.grade")%></p>
    <p class="survey_block_top_space"></p>
    <%= f.text_field :loc_grade, :class=>'optionalInput loep_input', :readonly => readonly ? "true" : nil %>
  <%end%>

  <%if items.include?("loc_strategy") or items.include?("all") %>
    <p class="survey_question_title"><%=t("context.lo.strategy")%></p>
    <p class="survey_block_top_space"></p>
    <%Utils.getOptionsForSelectLOContextStrategy.map{|u| u[0]}.each do |option|%>
      <p class="input_wrapper">
        <input type="checkbox"/><span> <%=option%></span>
      </p>
    <%end%>
  <%end%>

</div>