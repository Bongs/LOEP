<script type="text/javascript">
  $(document).ready(function(){
    <% if !readonly %>
      $("div.survey_block[item='1'] input[type='checkbox']").on("change", function(e){
        $("div.survey_block[item='1'] input[type='checkbox']").removeClass("checkboxActive");
        if($(e.target).is(":checked")){
          $(e.target).addClass("checkboxActive");
          var item1Value = $(e.target).attr("value");
        }
        $("div.survey_block[item='1'] input[type='checkbox']").not(".checkboxActive").removeAttr("checked");

        if(typeof item1Value == "string"){
          updateCircleForItem(1,item1Value);
        } else {
          updateCircleForItem(1,"");
        }
      });
    <% end %>
  });
</script>






 
