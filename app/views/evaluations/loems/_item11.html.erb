<!-- The individual checkbox information is stored in the following slots: item55-item59 -->
<%item11checkbox1Value = @evaluation.send("item55")%>
<%item11checkbox2Value = @evaluation.send("item56")%>
<%item11checkbox3Value = @evaluation.send("item57")%>
<%item11checkbox4Value = @evaluation.send("item58")%>
<%item11checkbox5Value = @evaluation.send("item59")%>

<%= f.hidden_field "item55", :value => item11checkbox1Value, :class => "skipValidation" %>
<%= f.hidden_field "item56", :value => item11checkbox2Value, :class => "skipValidation" %>
<%= f.hidden_field "item57", :value => item11checkbox3Value, :class => "skipValidation" %>
<%= f.hidden_field "item58", :value => item11checkbox4Value, :class => "skipValidation" %>
<%= f.hidden_field "item59", :value => item11checkbox5Value, :class => "skipValidation" %>

<p class="input_wrappers_header"> The learning object includes:</p>
<p class="input_wrapper">
  <input nItem="55" type="checkbox" class="skipValidation" <%= item11checkbox1Value==1 ? "checked='checked'" : "" %> <%= readonly ? "disabled=\"disabled\"" : ""%>></input>
  <span>videos.</span>
</p>
<p class="input_wrapper">
  <input nItem="56" type="checkbox" class="skipValidation" <%= item11checkbox2Value==1 ? "checked='checked'" : "" %> <%= readonly ? "disabled=\"disabled\"" : ""%>></input>
  <span>animations.</span>
</p>
<p class="input_wrapper">
  <input nItem="57" type="checkbox" class="skipValidation" <%= item11checkbox3Value==1 ? "checked='checked'" : "" %> <%= readonly ? "disabled=\"disabled\"" : ""%>></input>
  <span>audio.</span>
</p>
<p class="input_wrapper">
  <input nItem="58" type="checkbox" class="skipValidation" <%= item11checkbox4Value==1 ? "checked='checked'" : "" %> <%= readonly ? "disabled=\"disabled\"" : ""%>></input>
  <span>written text, hands.</span>
</p>
<p class="input_wrapper">
  <input nItem="59" type="checkbox" class="skipValidation" <%= item11checkbox5Value==1 ? "checked='checked'" : "" %> <%= readonly ? "disabled=\"disabled\"" : ""%>></input>
  <span>static graphical representations.</span>
</p>

<% if !readonly %>
  <script type="text/javascript">
    var getItem11Score = function(itemsChecked){
      switch(itemsChecked){
          case 5:
          case 4:
            return 3;
          case 3:
              return 2;
          default:
              return 1;
      };
    };

    $(document).ready(function(){
      loadEventsForComplexItem("11");
    });
  </script>
<% end %>