  <script type="text/javascript">
    var getItem2Score = function(itemsChecked){
      switch(itemsChecked){
          case 3:
              return 3;
              break;
          case 2:
              return 2;
          default:
              return 1;
      };
    };

    $(document).ready(function(){
      loadEventsForComplexItem("2");
    });
  </script>
<% end %>