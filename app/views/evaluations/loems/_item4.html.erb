<!-- The individual checkbox information is stored in the following slots: item21-item26 -->
<%item4checkbox1Value = @evaluation.send("item21")%>
<%item4checkbox2Value = @evaluation.send("item22")%>
<%item4checkbox3Value = @evaluation.send("item23")%>
<%item4checkbox4Value = @evaluation.send("item24")%>
<%item4checkbox5Value = @evaluation.send("item25")%>
<%item4checkbox6Value = @evaluation.send("item26")%>

<%= f.hidden_field "item21", :value => item4checkbox1Value, :class => "skipValidation" %>
<%= f.hidden_field "item22", :value => item4checkbox2Value, :class => "skipValidation" %>
<%= f.hidden_field "item23", :value => item4checkbox3Value, :class => "skipValidation" %>
<%= f.hidden_field "item24", :value => item4checkbox4Value, :class => "skipValidation" %>
<%= f.hidden_field "item25", :value => item4checkbox5Value, :class => "skipValidation" %>
<%= f.hidden_field "item26", :value => item4checkbox6Value, :class => "skipValidation" %>

<p class="input_wrapper">
  <input nItem="21" value="1" group="1" type="checkbox" class="skipValidation" <%= item4checkbox1Value==1 ? "checked='checked'" : "" %> <%= readonly ? "disabled=\"disabled\"" : ""%>></input>
  <span><b>Few/no</b> pages have a consistent look and feel to it.</span>
</p>
<p class="input_wrapper">
  <input nItem="22" value="2" group="1" type="checkbox" class="skipValidation" <%= item4checkbox2Value==1 ? "checked='checked'" : "" %> <%= readonly ? "disabled=\"disabled\"" : ""%>></input>
  <span> <b>Some</b> pages have a consistent look and feel to it.</span>
</p>
<p class="input_wrapper">
  <input nItem="23" value="3" group="1" type="checkbox" class="skipValidation" <%= item4checkbox3Value==1 ? "checked='checked'" : "" %> <%= readonly ? "disabled=\"disabled\"" : ""%>></input>
  <span><b>All/most</b> pages have a consistent look and feel to it.</span>
</p>

<p class="input_wrappers_header">&nbsp;</p>

<p class="input_wrapper">
  <input nItem="24" value="1" group="2" type="checkbox" class="skipValidation" <%= item4checkbox4Value==1 ? "checked='checked'" : "" %> <%= readonly ? "disabled=\"disabled\"" : ""%>></input>
  <span>Text and visual components are in a consistent location <b>rarely/never</b>.</span>
</p>
<p class="input_wrapper">
  <input nItem="25" value="2" group="2" type="checkbox" class="skipValidation" <%= item4checkbox5Value==1 ? "checked='checked'" : "" %> <%= readonly ? "disabled=\"disabled\"" : ""%>></input>
  <span>Text and visual components are in a consistent location <b>sometimes</b>.</span>
</p>
<p class="input_wrapper">
  <input nItem="26" value="3" group="2" type="checkbox" class="skipValidation" <%= item4checkbox6Value==1 ? "checked='checked'" : "" %> <%= readonly ? "disabled=\"disabled\"" : ""%>></input>
  <span>Text and visual components are in a consistent location <b>always</b>.</span>
</p>

<% if !readonly %>
  <script type="text/javascript">
    $(document).ready(function(){
      loadEventsForItemWithGroups("4");
    });
  </script>
<% end %>