<!-- The individual checkbox information is stored in the following slots: item42-item45 -->
<%item7checkbox1Value = @evaluation.send("item42")%>
<%item7checkbox2Value = @evaluation.send("item43")%>
<%item7checkbox3Value = @evaluation.send("item44")%>
<%item7checkbox4Value = @evaluation.send("item45")%>

<%= f.hidden_field "item42", :value => item7checkbox1Value, :class => "skipValidation" %>
<%= f.hidden_field "item43", :value => item7checkbox2Value, :class => "skipValidation" %>
<%= f.hidden_field "item44", :value => item7checkbox3Value, :class => "skipValidation" %>
<%= f.hidden_field "item45", :value => item7checkbox4Value, :class => "skipValidation" %>

<p class="input_wrappers_header"> The text has:</p>
<p class="input_wrapper">
  <input nItem="42" type="checkbox" class="skipValidation" <%= item7checkbox1Value==1 ? "checked='checked'" : "" %> <%= readonly ? "disabled=\"disabled\"" : ""%>></input>
  <span>Text is easy to read (e.g., good font size and type, clear, not fuzzy).</span>
</p>
<p class="input_wrapper">
  <input nItem="43" type="checkbox" class="skipValidation" <%= item7checkbox2Value==1 ? "checked='checked'" : "" %> <%= readonly ? "disabled=\"disabled\"" : ""%>></input>
  <span>Contrast between text and background is easy to read.</span>
</p>
<p class="input_wrapper">
  <input nItem="44" type="checkbox" class="skipValidation" <%= item7checkbox3Value==1 ? "checked='checked'" : "" %> <%= readonly ? "disabled=\"disabled\"" : ""%>></input>
  <span>Text is presented in short, concise segments.</span>
</p>
<p class="input_wrapper">
  <input nItem="45" type="checkbox" class="skipValidation" <%= item7checkbox4Value==1 ? "checked='checked'" : "" %> <%= readonly ? "disabled=\"disabled\"" : ""%>></input>
  <span>White space is used effectively.</span>
</p>

<% if !readonly %>
  <script type="text/javascript">
    var getItem7Score = function(itemsChecked){
      switch(itemsChecked){
          case 4:
              return 3;
          case 3:
          case 2:
              return 2;
          default:
              return 1;
      };
    };

    $(document).ready(function(){
      loadEventsForComplexItem("7");
    });
  </script>
<% end %>