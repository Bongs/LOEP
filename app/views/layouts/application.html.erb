<!DOCTYPE html>
<html>
<head>
  <title>LOEP - Learning Object Evaluation Platform</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="wrapper">
	<div id='header'>
		<%= render 'layouts/header' %>
	</div>
	<div id='container'>
		<%= render '/layouts/menu' %>
		<div id="homepagecontent">
			<%= render '/application/notifications' %>
			<%= yield %>
		</div>
	</div>
	<div id='footer'>
		<%= render 'layouts/footer' %>
	</div>
</div>

<%= render 'application/common_js' %>

</body>
</html>