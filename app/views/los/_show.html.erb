<div class="show_wrapper loep_form_wrapper">
  <h2><%=@lo.name%></h2>
  <% if iamAdmin? %>
    <%= link_to 'View as Reviewer', rlo_path(@lo) %> |
    <%= link_to 'Edit', edit_lo_path(@lo) %> |
    <a href="<%=new_assignment_path_for(@lo.id,nil)%>"> Add assignment </a>
  <% end %>
  </br>
  </br>

  <%= form_for(@lo) do |f| %>
    <p class="show_legend">Name</p>
    <p class="show_value"><%=@lo.name%></p>

    <p class="show_legend">URL</p>
    <a target="_blank" href="<%=@lo.url%>"><p class="show_value"><%=@lo.url%></p></a>

    <p class="show_legend">Repository</p>
    <p class="show_value"><%=@lo.repository%></p>

    <p class="show_legend">Description</p>
    <p class="show_value"><%=@lo.description%></p>

    <p class="show_legend">Categories</p>
    <p class="show_value"><%=@lo.getCategories%></p>
    
    <p class="show_legend">Tags</p>
    <div class="tagsinput">
      <% @lo.tag_list.each do |tag| %>
        <p class="show_value"><span class='tag'><%=tag%></span></p>
      <% end %>
    </div> 

    <p class="show_legend">Language</p>
    <p class="show_value"><%=Utils.readable_lan(@lo.lan)%></p>

    <p class="show_legend">Type</p>
    <p class="show_value"><%=@lo.lotype%></p>

    <p class="show_legend">Technology or Format</p>
    <p class="show_value"><%=@lo.technology%></p>

    <div class="form_checkbox_wrapper">
      <p class="show_legend">Elements included in this Learning Object:</p>
      <table class="loep_table_form loep_table_form_view">
        <tr>
          <td><%= f.check_box :hasText, :disabled => "true" %><span>Text</span></td>
          <td><%= f.check_box :hasImages, :disabled => "true" %><span>Images</span></td>
          <td><%= f.check_box :hasVideos, :disabled => "true" %><span>Videos</span></td>
          <td><%= f.check_box :hasAudios, :disabled => "true" %><span>Audios</span></td>
        </tr>
        <tr>
          <td><%= f.check_box :hasQuizzes, :disabled => "true" %><span>Quizzes</span></td>
          <td><%= f.check_box :hasWebs, :disabled => "true" %><span>Webs</span></td>
          <td><%= f.check_box :hasFlashObjects, :disabled => "true" %><span>FlashObjects</span></td>
          <td><%= f.check_box :hasApplets, :disabled => "true" %><span>Applets</span></td>
        </tr>
        <tr>
          <td><%= f.check_box :hasDocuments, :disabled => "true" %><span>Documents</span></td>
          <td><%= f.check_box :hasFlashcards, :disabled => "true" %><span>Flashcards</span></td>
          <td><%= f.check_box :hasVirtualTours, :disabled => "true" %><span>Virtual Tours</span></td>
          <td><%= f.check_box :hasEnrichedVideos, :disabled => "true" %><span>Enriched Videos</span></td>
        </tr>
      </table>
    </div>
  <%end%>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('#tags').tagsInput({ 
      autocomplete_url:'http://localhost:3000/tags',
      'minChars' : 2,
      'maxChars' : 25 //if not provided there is no limit,
    });

    $("table.loep_table_form_view").find("input[checked]").parent().addClass("tdchecked");
  });
</script>