<% showTools ||= false %>

<% sL = @scores.length %>
<% if sL === 0 %>
  <%= render '/layouts/emptytable', :resources => "scores" %>
<% else %>
  <table id="res_table" cellspacing='0' class="loep_table">
    <thead>
      <tr>
        <th>Metric</th>
        <th>Evaluations Methods</th>
        <th>Score</th>
      </tr>
    </thead>
    <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td>
          <%= score.metric.name %>
        </td>
        <td class="tdcenter">
          <%score.metric.evmethods.each_with_index do |evmethod,i| %>
            <% if i!=0 %>
             , 
            <% end %>
            <a href="<%=evmethod.documentation_path%>"><%=evmethod.name%></a>
          <%end%>
        </td>
        <td class="tdcenter">
          <%=score.value.round(2)%>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>


<% if showTools %>

<script type="text/javascript">

  //Store the ids
  //selectedLOs[lo_id] = lo_id
  var selectedLOs = {};

  $(document).ready(function(){

    //////////////////
    // Table Sorter
    //////////////////

    var iDisplayLength = LOEP.Storage.get("ScoresTable_iDisplayLength") || -1;

    //DOC: http://datatables.net
    var losTable = $("#res_table").dataTable({
      "bJQueryUI": true,
      "sPaginationType": "full_numbers",
      "aaSorting": [[ 1, "asc" ]],
      "aoColumnDefs": [
          { 'bSortable': false, 'aTargets': [ 0,2,3,4,5,6 ] },
          { "bSearchable": false, "aTargets": [ 0,2,3,4,5,6 ] }
      ],
      "sDom": '<"H"lfr><"F"ip>t',
      "iDisplayLength": iDisplayLength,
      "oLanguage": {
        "sLengthMenu": 'Display <select>'+
          '<option value="5">5</option>'+
          '<option value="10">10</option>'+
          '<option value="25">25</option>'+
          '<option value="50">50</option>'+
          '<option value="100">100</option>'+
          '<option value="-1">All</option>'+
          '</select> records'
      }
    });

    //DataTable events: http://datatables.net/docs/DataTables/1.9.4/#page

    $('#res_table_length').on('change', function(e){
      var iDisplayLength = parseInt($(this).find("select").val());
      LOEP.Storage.add("ScoresTable_iDisplayLength",iDisplayLength);
    });

  });

</script>

<% end %>